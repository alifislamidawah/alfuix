{
  "name": "aluix",
  "version": "1.0.0",
  "description": "ALUIX â€” A futuristic, modular SCSS + JS UI framework that extends Bootstrap with advanced utilities, animations, and clipping effects for next-generation web design.",
  "keywords": [
    "aluix",
    "aluix",
    "bootstrap",
    "bootstrap-extended",
    "ui-framework",
    "frontend-framework",
    "scss",
    "sass",
    "css",
    "javascript",
    "utilities",
    "animations",
    "clip-path",
    "design-system",
    "modern-ui",
    "responsive-design",
    "web-components",
    "motion-ui",
    "visual-effects",
    "futuristic-ui",
    "custom-utilities"
  ],
  "homepage": "https://github.com/yourusername/ALUIX#readme",
  "bugs": {
    "url": "https://github.com/yourusername/ALUIX/issues"
  },
  "license": "MIT",
  "author": "Alif Design Studio",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ALUIX.git"
  },
  "main": "dist/js/aluix.js",
  "style": "dist/aluix.css",
  "sass": "scss/aluix.scss",
  "exports": {
    ".": {
      "sass": "./scss/aluix.scss",
      "style": "./dist/aluix.css",
      "require": "./dist/js/aluix.js",
      "default": "./dist/js/aluix.js"
    },
    "./scss/*": "./scss/*",
    "./dist/*": "./dist/*",
    "./js/*": "./js/*"
  },
  "files": [
    "dist/",
    "scss/",
    "js/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "npx sass --watch scss:dist/css",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npm run css:normal && npm run css:minify",
    "css:normal": "npx sass scss/aluix.scss dist/css/aluix.css --style=expanded",
    "css:minify": "npx sass scss/aluix.scss dist/css/aluix.min.css --style=compressed",
    "build:js": "npm run js:bundle && npm run js:minify",
    "js:bundle": "npx concat-cli -f js/aluix.js js/aluix-animation.js -o dist/js/aluix.bundle.js",
    "js:minify": "npx terser dist/js/aluix.bundle.js -o dist/js/aluix.bundle.min.js --compress --mangle",
    "clean": "npx rimraf dist",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "peerDependencies": {
    "bootstrap": ">=5.3.0"
  },
  "optionalDependencies": {
    "fslightbox": "^3.4.1",
    "particles.js": "^2.0.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "concat-cli": "^4.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "terser": "^5.44.0"
  }
}
